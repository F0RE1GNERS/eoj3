{% extends 'base.jinja2' %}

{% block title %}Activities - {% endblock %}

{% block page_header %}Activities{% endblock %}

{% block content %}

  {% if privileged %}
  <a class="ui button basic" href="{{ url('contest:activity_add') }}">Add an activity</a>
  {% endif %}

  <table class="ui celled center aligned table">
    <thead>
      <tr class="center aligned">
        <th class="collapsing">#</th>
        <th>Name</th>
        <th>Register Open</th>
        <th>Register Closed</th>
{#        <th class="collapsing">Participants</th>#}
      </tr>
    </thead>
    <tbody>
      {% for activity in activity_list %}
        <tr>
          <td>{{ activity.pk }}</td>
          <td><a href="{{ url('contest:activity_register', activity.pk) }}">{{ activity.title }}</a></td>
          <td>{{ activity.register_start_time | date("Y-m-d H:i") }}</td>
          <td>{{ activity.register_end_time | date("Y-m-d H:i") }}</td>
{#          <td><i class="icon fitted user" aria-hidden="true"></i> &times; {{ activity.participants__count }}</td>#}
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
