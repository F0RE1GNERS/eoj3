{% extends 'backstage/base.jinja2' %}
{% block content_header %}
  Schools
{% endblock %}

{% block backstage_content %}

  {% include 'components/message.jinja2' %}

  <table class="ui celled center aligned table">
    <thead>
      <tr>
        <th colspan="4">
          <a href="{{ url('backstage:account_school_add') }}" class="ui right floated primary labeled icon button">
            <i class="server icon"></i> Add School
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for school in school_list %}
        <tr>
          <td>{{ school.pk }}</td>
          <td><a href="{{ url('backstage:account_school_edit', school.pk) }}">{{ school.name }}</a></td>
          <td>{{ school.abbr }}</td>
          <td>{{ school.alias }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
