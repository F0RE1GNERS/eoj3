{% extends 'html_base.jinja2' %}

{% block css %}
<style>
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 450px;
  }
</style>
{% endblock %}

{% block _content %}
  <div class="ui middle aligned center aligned grid">

    <div class="column">
      <img class="ui fluid image" src="/static/image/error/500.png">
      <h2 class="ui header">
        Be back soon...
        <div class="sub header">An email has been sent to staff.</div>
      </h2>
    </div>
  </div>
{% endblock %}
