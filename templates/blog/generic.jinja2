{% extends 'base.jinja2' %}
{% from 'components/profile_card.jinja2' import profile_card with context %}
{% from 'components/blog_preview.jinja2' import blog_preview %}

{% block title %}博客 - {% endblock %}

{% block page_header %}{{ profile.get_username_display() }}{% endblock %}

{% block content %}

  <div class="ui stackable grid">

    <div class="eleven wide column">

      {% if is_author %}<a class="ui labeled icon button primary" href="{{ url('blog:create') }}"><i class="icon add"></i>写博客</a>{% endif %}
      <div class="ui feed">
        {% if blog_list %}
          {% for blog in blog_list %}
            {{ blog_preview(blog) }}
          {% endfor %}
        {% endif %}
      </div>
    </div>

  </div>

{% endblock %}
