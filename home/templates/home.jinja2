{% extends 'html_base.jinja2' %}

{% block css %}
  <style>
    .ui.footer.segment {
      margin: 0;
    }
  </style>
{% endblock %}

{% block _content %}

<div class="pusher">
  <div id="advertisement" class="ui inverted vertical masthead center aligned segment">

    <img src="/static/image/bg/1.jpg">
    <img src="/static/image/bg/2.jpg" class="inactive">
    <img src="/static/image/bg/3.jpg" class="inactive">
    <img src="/static/image/bg/4.jpg" class="inactive">
    <img src="/static/image/bg/5.jpg" class="inactive">
    <img src="/static/image/bg/6.jpg" class="inactive">
    <img src="/static/image/bg/7.jpg" class="inactive">

    <div class="ui container">
      <div class="ui large secondary inverted pointing menu">
        <a class="active item">首页</a>
        <a class="item" href="{{ url('contest:list') }}">比赛</a>
        <a class="item" href="{{ url('problem:list') }}">题目集</a>
        <a class="item" href="{{ url('contest:gym') }}">作业</a>
        <div class="right item">
          {% if request.user.is_authenticated %}
          <a class="ui inverted button" href="{{ url('logout') }}?next={{ request.path }}">登出</a>
          {% else %}
          <a class="ui inverted button" href="{{ url('login') }}?next={{ request.path }}">登入</a>
          <a class="ui inverted button" href="{{ url('register') }}?next={{ request.path }}">注册</a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="ui text container">
      <h1 class="ui inverted header">
        ECNU Online Judge
      </h1>
      <h2>华东师范大学在线评测系统</h2>
    </div>

  </div>

  {% include 'components/footer.jinja2' %}
</div>

{% endblock %}

{% block script %}
  <script src="/static/node_modules/typed.js/lib/typed.min.js"></script>
{% endblock %}